{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "importHelpers": true
    },
    "exclude": [
    "node_modules"
  ],

  "compileOnSave": true
}
